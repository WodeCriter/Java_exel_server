<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="exel.userinterface.resources.app.Sheet.SheetController">
    <center>
        <ScrollPane fx:id="sheetScrollPane" fitToWidth="true" fitToHeight="true" BorderPane.alignment="CENTER">
            <content>
                <GridPane fx:id="spreadsheetGrid" gridLinesVisible="true">
                    <!-- The grid will be populated dynamically by the controller -->
                </GridPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>