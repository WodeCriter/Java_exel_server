  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Username">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#uploadFileListener" text="Upload File" />
            <Menu mnemonicParsing="false" text="My Sheets" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Log Out" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Undo" />
            <MenuItem mnemonicParsing="false" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Select All" />
            <MenuItem mnemonicParsing="false" text="Unselect All" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <BorderPane prefHeight="375.0" prefWidth="640.0">
               <top>
                  <HBox prefHeight="21.0" prefWidth="630.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" text="Refresh" />
                        <ProgressIndicator fx:id="loadingFileIndicator" prefHeight="0.0" prefWidth="50.0" />
                     </children>
                  </HBox>
               </top>
               <center>
                  <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <AnchorPane fx:id="filesListContainer" prefHeight="165.0" prefWidth="540.0">
                           <children>
<!--                               <fx:include fx:id="filesController" source="items/FilesList.fxml" />-->
<!--                              <ListView fx:id="filesList" prefHeight="165.0" prefWidth="540.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />-->
                           </children></AnchorPane>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </center>
               <right>
                  <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" text="view sheet" />
                        <Button mnemonicParsing="false" text="Premission request" />
                        <Button mnemonicParsing="false" text="acc/deny" />
                     </children>
                  </VBox>
               </right>
            </BorderPane>
      </children>
    </AnchorPane>
  </children>
